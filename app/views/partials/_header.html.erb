<div id= "nav-items">
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: "alert alert-info" %>
<% end %>

  <div id="account">
      <% if current_user %>
      You are logged in as  <%= current_user.name %>
      <%= link_to "Logout", logout_path, id: "logout", method: 'delete' %>
      <% else %>
      Want to create custom notifications?
      <%= link_to "Login With Twitter", login_path, id: "login" %>
    <% end %>
  </div>

  <div id="notifications">
    <% if current_user %>
      <%= form_tag notifications_path, method: :get do %>
        <%= button_tag(:class => "btn btn-info btn-sm notifications-btn") do %>
        Create Notifications
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<div id="api_doc">
  <%= link_to "Api Documentation", api_doc_index_path %>
</div>
